@model SmartSite.Models.Category
@{
    ViewBag.Title = "CreateCategory";
}

<h2>CreateCategory</h2>

@using (Html.BeginForm("CreateCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.CategoryName)
        @Html.TextBoxFor(c => c.CategoryName,new { @class= "form-control" })
        @Html.ValidationMessageFor(c => c.CategoryName,null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-block btn-success form-control">Create</button>
    </div>
}
