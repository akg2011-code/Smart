@model IEnumerable<SmartSite.Models.Product>
@{
    ViewBag.Title = "FilterProductsByType";
}

<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductType.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PdfFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="~/imageUploads/@item.Image" height="100rem" width="100%" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PdfFile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Edit", "Products", new { id = item.ID })">Edit</a>
                        <a href="@Url.Action("Delete", "Products", new { id = item.ID })">Delete</a>
                        
                    }

                    <a href="@Url.Action("Details", "Products", new { id = item.ID })">Details</a>
                </td>
            </tr>
        }

    </table>
</div>