@model SmartSite.Models.ProductType
@{
    ViewBag.Title = "CreateProductType";
}

    <form method="post" action="@Url.Action("CreateProductType", "ProductType")" enctype="multipart/form-data">

        <div class="form-group">
            @Html.LabelFor(t => t.Type)
            @Html.TextBoxFor(t => t.Type, new { @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Type, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.CategoryID)
            @Html.DropDownListFor(t=>t.CategoryID, ViewBag.CategoryID as IEnumerable<SelectListItem>,new { @class="form-control"})
            @Html.ValidationMessageFor(t => t.Type, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <hr />
            <input class="form-control" type="file" name="file">
        </div>

        <div class="form-group">
            <button class="btn btn-success form-control" type="submit">Save</button>
        </div>


    </form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}