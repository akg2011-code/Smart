@model SmartSite.Models.ProductType
@{
    ViewBag.Title = "CreateProductType";
}
@using (Html.BeginForm("CreateProductType", "ProductType", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="contact-form-area m-top-30 d-flex justify-content-center" style="width:50%;margin-left:25%">
        <div class="row d-flex justify-content-center">

            <div class="col-lg-12 col-md-12 ">
                <div class="form-group">
                    @Html.LabelFor(t => t.Type)
                    @Html.TextBoxFor(t => t.Type, new { @class = "form-control" })
                    @Html.ValidationMessageFor(t => t.Type, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 col-md-12 ">
                <div class="form-group">
                    @Html.LabelFor(t => t.CategoryID)
                    @Html.DropDownListFor(t => t.CategoryID, ViewBag.CategoryID as IEnumerable<SelectListItem>, new { @class = "form-control" })
                    @Html.ValidationMessageFor(t => t.Type, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 col-md-12 ">
                <div class="form-group">
                    @Html.LabelFor(t => t.Image)
                    <input class="form-control" type="file" name="file" accept="image/*">
                    <span class="text-danger">
                        @ViewBag.Message
                    </span>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 ">
                <div class="col-12">
                    <div class="form-group button">
                        <button type="submit" class="bizwheel-btn theme-2 ">Create</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
